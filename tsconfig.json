{
  "compilerOptions": {
    "outDir": "./frontassets/",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./src",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "paths": {
      "@lib/*": ["lib/*"],
      "@assets/*": ["assets/*"],
      "@features/*": ["features/*"],
      "@pages/*": ["pages/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
